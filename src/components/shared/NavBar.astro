---
const links = [
  { href: '/', text: 'Listado' },
  { href: '/pokemons/1', text: 'Paginado' },
  { href: '/favorites', text: 'Favoritos' },
  { href: '/islands', text: 'Islas' },
  { href: '/demo', text: 'Demo' },
];

const currentPath = Astro.url.pathname;

---

<nav class="bg-white shadow dark:bg-gray-800">
    <div class="container flex items-center justify-center p-6 mx-auto text-gray-600 capitalize dark:text-gray-300">
        {
            links.map(({href, text}) => {
                return <div>
                    <a href={href} 
                class="text-gray-800 dark:text-gray-200 mx-1.5 sm:mx-6">{text}</a>
                {
                    currentPath === href ? (<div 
                    transition:name="menu-line"
                    class="border-b-2 border-blue-500"></div>) :
                    (<div class="border-b-2 border-transparent"></div>)
                }
                </div>
            })
        }

    </div>
</nav>